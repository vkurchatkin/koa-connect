{
  "name": "koa-connect",
  "version": "2.1.0",
  "description": "Use Connect/Express middleware in Koa",
  "repository": "vkurchatkin/koa-connect",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "Vladimir Kurchatkin <vladimir.kurchatkin@gmail.com>",
  "contributors": [
    "Louis DeScioli (https://descioli.design)"
  ],
