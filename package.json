    "koa": "^2.0.0",
    "lint-staged": "^10.2.9",
    "mocha": "^2.3.4",
    "prettier": "^2.0.5",
    "supertest": "^6.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.0.1"
  },
  "keywords": [
    "koa",
    "connect",
    "express",
    "middleware"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
